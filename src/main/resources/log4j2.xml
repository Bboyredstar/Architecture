<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} %-5p %c{1}:%L - %m%n"></PatternLayout>
    </Console>
    <RollingFile name="RollingFile" fileName="./src/main/resources/logs/app.log"
    filePattern="logs/$${date:yyyy-MM}/app-%d{dd-MM-yyyy}-%i.log.zip"
    immediateFlush="true" append="true"
    >
      <PatternLayout>
        <Pattern>%d{MM-dd-yyyy HH:mm:ss,SSS} %-5p %c{1}:%L - %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="500KB"/>
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>